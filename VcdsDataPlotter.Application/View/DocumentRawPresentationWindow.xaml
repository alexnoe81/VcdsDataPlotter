<Window x:Class="VcdsDataPlotter.Gui.View.DocumentRawPresentationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VcdsDataPlotter.Gui.View"
        xmlns:converters="clr-namespace:VcdsDataPlotter.Gui.Converter"
        mc:Ignorable="d"
        Height="450" Width="800">
    <Window.Resources>
        <converters:FilePathConverter x:Key="keyFilePathConverter" />
    </Window.Resources>
    <Window.Title>
        <MultiBinding StringFormat="Data: {0} recorded on {1:yyyy-MM-dd HH\:mm\:ss}">
            <Binding Path="Data.FilePath" Converter="{StaticResource keyFilePathConverter}" ConverterParameter="name" />
            <Binding Path="Data.RecordingTimestamp" />
        </MultiBinding>
    </Window.Title>    
    <Grid>
        <local:DocumentRawPresentation DataContext="{Binding Data}" />
    </Grid>
</Window>
